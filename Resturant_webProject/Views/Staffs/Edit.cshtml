@model Resturant_webProject.Models.Staff

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.C_ID)

    <div>

        <section id="contact2" class="section-padding">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">

                        <form name="sentMessage" class="contact-form" method="post" novalidate>
                            <h4> Edit Staff</h4>
                            <hr />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row control-group">
                                        <div class="form-group col-xs-12 controls">
                                            @Html.EditorFor(model => model.C_Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name" } })
                                            @Html.ValidationMessageFor(model => model.C_Name, "", new { @class = "text-danger" })

                                        </div>
                                    </div>

                                </div>

                                <div class="col-md-12">
                                    <div class="row control-group">
                                        <div class="form-group col-xs-12 controls">

                                            @Html.EditorFor(model => model.C_Phone, new { htmlAttributes = new { @class = "form-control", @placeholder = "phone" } })
                                            @Html.ValidationMessageFor(model => model.C_Phone, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row control-group">
                                <div class="form-group col-xs-12  controls">

                                    @Html.EditorFor(model => model.C_Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email" } })
                                    @Html.ValidationMessageFor(model => model.C_Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row control-group">
                                <div class="form-group col-xs-12 controls">

                                    @Html.EditorFor(model => model.C_Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "password" } })
                                    @Html.ValidationMessageFor(model => model.C_Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br>
                            <div id="success"></div>
                            <div class="row">
                                <div class="form-group col-xs-12 text-right">
                                    <button type="submit" class="btn btn-warning btn-lg">Edit</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </section>
    </div>
    </div>
}

<div>
    <a href='@Url.Action("Index", "Staffs")' class="btn btn-warning" style="margin:20px;">Back To List</a>
</div>
